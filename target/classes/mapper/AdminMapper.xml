<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.AdminMapper">
    <!-- 查询所有菜单-->
    <select id="getMenu" resultType="com.po.Menu">
        select * from menu
    </select>
    <!-- 查询二级菜单-->
    <select id="getSonMenu" resultType="com.po.Menu">
        select * from menu where grade=1
    </select>
    <!-- 查询教师信息-->
    <select id="getTeacher" resultType="com.po.User">
        select * from user where role_id=2
    </select>
    <!-- 查询家长信息-->
    <select id="getParent" resultType="com.po.User">
        select * from user where role_id=3
    </select>
    <!-- 查询学生信息-->
    <select id="getStudent" resultType="com.po.User">
        select * from user where role_id=4
    </select>
    <!-- 查询所有角色-->
    <select id="getRole" resultType="com.po.Role">
        select * from role
    </select>
    <!-- 添加用户-->
    <insert id="addUserSubmit" parameterType="com.po.User">
        insert into user(user_id,name,pwd,phone_no,role_id)
        values(#{user_id},#{name},#{pwd},#{phone_no},#{role_id})
    </insert>
    <!-- 修改用户-->
    <update id="updateUser" parameterType="com.po.User">
        update user set pwd=#{pwd},phone_no=#{phone_no},role_id=#{role_id} where user_id=#{user_id}
    </update>
    <!-- 查询用户-->
    <select id="getUser" resultType="com.po.User" parameterType="com.po.User">
        select * from user
    </select>
    <!--删除用户-->
    <delete id="deleteUser" parameterType="int">
        delete from user where user_Id=#{user_id}
    </delete>
    <!--重置密码-->
    <update id="updatePwd" parameterType="com.po.User">
        update user set pwd=123 where user_id=#{user_id}
    </update>
    <!-- 查询出所有的父级菜单 -->
    <select id="getMenusParent" resultType="com.po.Menu">
		select * from menu where grade=1
	</select>
    <!-- 添加菜单-->
    <insert id="addMenuSubmit" parameterType="com.po.Menu">
        insert into menu(title,url,grade,p_id,sort,remark)
        values(#{title},#{url},#{grade},#{p_id},#{sort},#{remark})
    </insert>
    <!--删除菜单-->
    <delete id="deleteMenu" parameterType="int">
        delete from menu where menu_Id=#{menu_id}
    </delete>
    <!-- 更新菜单-->
    <update id="updateMenu" parameterType="com.po.Menu">
        update menu set title=#{title},url=#{url},grade=#{grade},p_id=#{p_id},sort=#{sort},remark=#{remark}
        where menu_id=#{menu_id}
    </update>
    <!--关联新增角色菜单 -->
    <insert id="addRoleMenu" parameterType="com.po.MenuRole">
		insert into menu_role(role_id,menu_id) values(#{role_id},#{menu_id})
	</insert>
    <!-- 删除角色菜单 -->
    <delete id="deleteRoleMenu" parameterType="int">
		delete from menu_role where mr_id=#{mr_id}
	</delete>
    <!-- 查询角色菜单 -->
    <select id="getRoleMenu" resultType="com.po.MenuRole">
		select * from menu_role order by menu_id
	</select>
    <!-- 添加角色-->
    <insert id="addRoleSubmit" parameterType="com.po.Role">
        insert into role(role_id,name) values(#{role_id},#{name})
    </insert>
    <!-- 删除角色-->
    <delete id="deleteRole" parameterType="int">
		delete from role where role_id=#{role_id}
	</delete>
    <!-- 更新角色-->
    <update id="updateRole" parameterType="com.po.Role">
        update role set name=#{name}
        where role_id=#{role_id}
    </update>
</mapper>