<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.LoginMapper">
  <!--根据ID和role查询用户-->
  <select id="getUserByIdAndRole" resultType="com.po.User" parameterType="com.po.User">
	select * from user
	where user_Id=#{user_id,jdbcType=INTEGER} and pwd=#{pwd,jdbcType=VARCHAR} and role_id=#{role_id,jdbcType=INTEGER};
  </select>

  <!-- 菜单角色-->
  <resultMap id="MenuAndRole" type="com.po.MenuRole">
    <id column="mr_id" jdbcType="INTEGER" property="mr_id" />
    <result column="menu_id" jdbcType="INTEGER" property="menu_id"/>
    <result column="role_id" jdbcType="INTEGER" property="role_id"/>
    <association property="menu" javaType="com.po.Menu">
      <id column="menu_id" jdbcType="INTEGER" property="menu_id" />
      <result column="title" jdbcType="VARCHAR" property="title"/>
      <result column="url" jdbcType="VARCHAR" property="url"/>
      <result column="p_id" jdbcType="INTEGER" property="p_id"/>
      <result column="sort" jdbcType="INTEGER" property="sort"/>
      <result column="grade" jdbcType="INTEGER" property="grade"/>
      <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </association>
    <association property="role" javaType="com.po.Role">
      <id column="role_id" jdbcType="INTEGER" property="role_id" />
      <result column="name" jdbcType="VARCHAR" property="name"/>
    </association>
  </resultMap>

  <!--获取管理员菜单-->
  <select id="getAdminByMenuAndRole" resultMap="MenuAndRole">
    select * from menu_role,menu,role
    where menu_role.menu_id=menu.menu_id and menu_role.role_id=role.role_id and menu_role.role_id=1 order by menu_role.menu_id;
  </select>

  <!--  获取教师菜单-->
  <select id="getTeacherByMenuAndRole" resultMap="MenuAndRole">
    select * from menu_role,menu,role
    where menu_role.menu_id=menu.menu_id and menu_role.role_id=role.role_id and menu_role.role_id=2 order by menu_role.menu_id;
  </select>

  <!--  获取家长菜单-->
  <select id="getParentByMenuAndRole" resultMap="MenuAndRole">
    select * from menu_role,menu,role
    where menu_role.menu_id=menu.menu_id and menu_role.role_id=role.role_id and menu_role.role_id=3 order by menu_role.menu_id;
  </select>

</mapper>